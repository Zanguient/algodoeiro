
	var data = [4, 8, 15, 16, 23, 42];
	var init = 0;
	var width = 420;
	var barHeight = 20;
	
	var escala = d3.scale.linear().domain([init, d3.max(data)]).range([0, width]);
	
	var chart = d3.select("body").select(".chart").attr("width", width).attr("height", barHeight*data.length);
	
	
	.data(data)
	.enter()
	.append("div")
	.style("width", function(d) {
		return escala(d) + "px";
	}).text(function(d) {
		return d;
	});




















