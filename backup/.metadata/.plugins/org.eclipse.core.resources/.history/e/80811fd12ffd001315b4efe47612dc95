<head>
	
	<link href="style.css" rel="stylesheet">

	<script>
		var data = [0, 4, 8, 15, 16, 23, 42];

		var escala = d3.scale.linear().domain([0, d3.max(data)]).range([0, 420]);
		// o tamanho desejado do grafico eh 420

		d3.select(".chart")
		.selectAll("div")
		.data(data).enter()
		.append("div")
		.style("width", function(d) {
			return d * 10 + "px";
		}).text(function(d) {
			return d;
		});
	</script>

</head>

